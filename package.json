{
  "name": "workstream-svelte",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "dev:aws": "DB_ENV=aws vite dev",
    "dev:local": "DB_ENV=local vite dev",
    "env:local": "node scripts/switch-env.js local",
    "env:aws": "node scripts/switch-env.js aws",
    "env:status": "node scripts/switch-env.js",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node build/index.js",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "check:errors": "node scripts/check-errors.js",
    "check:quick": "node scripts/quick-check.js",
    "check:all": "npm run check:errors && npm run check && npm run build",
    "lint": "eslint src/ --ext .ts,.svelte",
    "lint:fix": "eslint src/ --ext .ts,.svelte --fix",
    "lint:strict": "eslint src/ --ext .ts,.svelte --max-warnings 0",
    "quality:gate": "node scripts/quality-gate.js",
    "quality:full": "npm run lint:strict && npm run check && npm run quality:gate",
    "security:audit": "npm audit --audit-level=high",
    "security:fix": "npm audit fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "ci": "npm run quality:full && npm run security:audit",
    "auto-validation": "node scripts/auto-validation-cli.js",
    "auto-validation:start": "npm run auto-validation start",
    "auto-validation:stop": "npm run auto-validation stop",
    "auto-validation:status": "npm run auto-validation status",
    "auto-validation:logs": "npm run auto-validation logs",
    "auto-validation:test": "npm run auto-validation test"
  },
  "engines": {
    "node": ">=18.13"
  },
  "devDependencies": {
    "@fontsource/fira-mono": "^5.0.0",
    "@neoconfetti/svelte": "^2.0.0",
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/adapter-node": "^5.3.2",
    "@sveltejs/kit": "^2.22.0",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/typography": "^0.5.16",
    "@types/jsdom": "^21.1.7",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.35.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-svelte": "^3.12.3",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.25.0",
    "svelte-check": "^4.0.0",
    "svelte-eslint-parser": "^1.3.2",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.0.0",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@lucide/svelte": "^0.544.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.15.5",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.2",
    "exceljs": "^4.4.0",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.2",
    "mermaid": "^11.11.0",
    "pg": "^8.16.3"
  }
}
