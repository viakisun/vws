{
  "name": "vws",
  "version": "0.2.5",
  "private": true,
  "scripts": {
    "build": "vite build",
    "dev": "vite dev",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "check:svelte": "svelte-check --tsconfig ./tsconfig.json",
    "check:typescript": "tsc --noEmit",
    "lint": "eslint src/ --ext .svelte,.ts --no-fix",
    "lint:fix": "echo '⚠️ 반응성 코드는 수동으로 수정하세요' && exit 1",
    "lint:svelte": "eslint src/ --ext .svelte --no-fix",
    "lint:typescript": "eslint src/ --ext .ts --no-fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "security:audit": "npm audit",
    "audit": "npm audit",
    "outdated": "npm outdated",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "version:show": "echo \"Current version: $(node -p 'require(\"./package.json\").version')\""
