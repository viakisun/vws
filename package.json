{
  "name": "vws",
  "version": "0.5.1",
  "private": true,
  "scripts": {
    "build": "vite build",
    "dev": "vite dev",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json --output=silent",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "check:svelte": "svelte-check --tsconfig ./tsconfig.json --output=silent",
    "check:svelte:ci": "svelte-check --tsconfig ./tsconfig.json --output=silent --fail-on-warnings false",
    "check:svelte:strict": "svelte-check --tsconfig ./tsconfig.json --output=silent",
    "check:typescript": "tsc --noEmit",
    "lint": "eslint src/ --ext .svelte,.ts --no-fix",
    "lint:fix": "echo '⚠️ 반응성 코드는 수동으로 수정하세요' && exit 1",
    "lint:svelte": "eslint src/ --ext .svelte --no-fix",
    "lint:typescript": "eslint src/ --ext .ts --no-fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:unit": "vitest run tests/utils tests/stores tests/security --coverage --coverage.reportsDirectory=coverage/unit",
    "test:integration": "vitest run tests/database tests/api --coverage --coverage.reportsDirectory=coverage/integration",
    "test:component": "vitest run tests/components --coverage --coverage.reportsDirectory=coverage/component",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:coverage": "vitest run --coverage",
    "test:coverage:check": "vitest run --coverage --coverage.thresholds.lines=75 --coverage.thresholds.functions=75 --coverage.thresholds.branches=70 --coverage.thresholds.statements=75",
    "test:coverage:report": "vitest run --coverage --coverage.reporter=html --coverage.reporter=json --coverage.reporter=text",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "security:audit": "npm audit --audit-level=critical || true",
    "audit": "npm audit --audit-level=critical || true",
    "outdated": "npm outdated",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "version:show": "echo \"Current version: $(node -p 'require(\"./package.json\").version')\"",
    "validate-resources": "tsx scripts/validate-resources.ts",
    "sync-resources": "tsx scripts/sync-resources-to-db.ts",
    "sync-resources:dry": "tsx scripts/sync-resources-to-db.ts --dry-run",
    "generate-migration": "tsx scripts/generate-migration.ts",
    "resources": "npm run validate-resources && npm run sync-resources",
    "db:migrate:personnel": "tsx scripts/migrate-rd-personnel-data.ts",
    "db:migrate:vendors": "tsx scripts/migrate-rd-vendors.ts",
    "db:migrate:expenses": "tsx scripts/migrate-rd-expense-data.ts",
    "db:migrate:company-code": "psql $DATABASE_URL -f migrations/035_add_company_code.sql"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.55.1",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/svelte": "^5.2.8",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-svelte": "^3.12.4",
    "eslint-plugin-unused-imports": "^4.2.0",
    "jsdom": "^27.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.39.6",
    "svelte-check": "^3.6.0",
    "svelte-eslint-parser": "^1.3.3",
    "tailwindcss": "^4.1.13",
    "tsx": "^4.19.2",
    "typescript": "^5.0.0",
    "vite": "^7.0.0",
    "vitest": "^3.2.4"
  },
  "type": "module",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.908.0",
    "@aws-sdk/client-textract": "^3.908.0",
    "@aws-sdk/s3-request-presigner": "^3.908.0",
    "@lucide/svelte": "^0.544.0",
    "@sveltejs/adapter-node": "^5.3.2",
    "@tailwindcss/postcss": "^4.1.13",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.5.0",
    "dompurify": "^3.2.7",
    "dotenv": "^17.2.2",
    "github-markdown-css": "^5.8.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-svelte": "^0.545.0",
    "marked": "^16.4.0",
    "openai": "^6.3.0",
    "pdf-lib": "^1.17.1",
    "pdf-poppler": "^0.2.3",
    "pg": "^8.16.3",
    "xlsx": "^0.18.5"
  }
}
